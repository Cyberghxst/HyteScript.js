{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "exclude": ["dist"]
}
